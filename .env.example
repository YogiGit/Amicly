# Amicly Development Environment Variables
# Copy this file to .env.local and update with your development values

# =============================================================================
# ENVIRONMENT CONFIGURATION
# =============================================================================
NODE_ENV=development
PROJECT_ENV=amicaenv

# =============================================================================
# FRONTEND CONFIGURATION (Mobile App)
# =============================================================================
EXPO_PUBLIC_API_BASE_URL=https://dev-api.amicly.com/v1
EXPO_PUBLIC_ENVIRONMENT=development
EXPO_PUBLIC_VOICE_UPLOAD_URL=https://dev-voice.amicly.com
EXPO_PUBLIC_CRISIS_SUPPORT_URL=https://dev-crisis.amicly.com
EXPO_PUBLIC_SENTRY_DSN=your-development-sentry-dsn
EXPO_PUBLIC_STORYBOOK=false

# =============================================================================
# BACKEND CONFIGURATION
# =============================================================================
# Database
DB_HOST=localhost
DB_PORT=5432
DB_NAME=amicly_dev
DB_USER=amicly_dev_user
DB_PASSWORD=your-dev-db-password
DB_SSL_MODE=prefer

# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-dev-aws-access-key
AWS_SECRET_ACCESS_KEY=your-dev-aws-secret-key

# AWS Services
BEDROCK_MODEL_ID=anthropic.claude-v2
COMPREHEND_ENDPOINT=https://comprehend.us-east-1.amazonaws.com
S3_VOICE_BUCKET=amicly-dev-voice-files
KMS_KEY_ID=your-development-kms-key

# =============================================================================
# SAFETY & COMPLIANCE
# =============================================================================
CRISIS_TEXT_LINE_API_KEY=your-development-crisis-api-key
NCMEC_REPORTING_ENDPOINT=your-development-ncmec-endpoint
SAFETY_SCORE_THRESHOLD=95
CRISIS_CONFIDENCE_THRESHOLD=80
COPPA_COMPLIANCE_MODE=development

# =============================================================================
# SECURITY
# =============================================================================
JWT_SECRET=your-development-jwt-secret-min-32-chars
ENCRYPTION_KEY=your-development-encryption-key-32-chars

# =============================================================================
# LOGGING & MONITORING
# =============================================================================
LOG_LEVEL=debug
ENABLE_AUDIT_LOGGING=true
SENTRY_DSN=your-backend-sentry-dsn

# =============================================================================
# DEVELOPMENT TOOLS
# =============================================================================
# Storybook
STORYBOOK_PORT=6006

# Hot reloading
FAST_REFRESH=true

# =============================================================================
# THIRD-PARTY INTEGRATIONS
# =============================================================================
# Add your development API keys here as needed

# =============================================================================
# NOTES
# =============================================================================
# 1. Never commit .env.local to version control
# 2. Use strong, unique values for production
# 3. Rotate secrets regularly
# 4. For AWS services, consider using IAM roles instead of access keys
# 5. Test all integrations in development before deploying